<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="12.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="patternsproject.UserMenuController">
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <Label fx:id="welcomeLbl" text="Welcome To The User Menu">
        <font><Font size="24.0" /></font>
    </Label>

    <TableView fx:id="quickViewTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="friendCol" text="Friend" />
            <TableColumn fx:id="collectionCol" text="Collection" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <children>
            <Button fx:id="friendsBtn" mnemonicParsing="false" onAction="#switchToFriendsMenu" text="Friends List" />
            <Button fx:id="collectionsBtn" mnemonicParsing="false" onAction="#switchToCollectionsMenu" text="Collections" />
            <Button fx:id="logOutBtn" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
        </children>
    </HBox>
</VBox>
