<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="patternsproject.AddFriendsController">
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <Label fx:id="addFriendLbl" text="Insert the name of the user you would like to friend:" wrapText="true" />

    <TextField fx:id="addFriendTextField" VBox.vgrow="NEVER" />

    <HBox spacing="10">
        <children>
            <Button fx:id="addFriendBtn" mnemonicParsing="false" onAction="#addFriendClick" text="Add Friend" />
            <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#returnAction" text="Return" />
        </children>
    </HBox>
</VBox>
